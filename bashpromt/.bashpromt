#!/bin/bash

prompt_configurator(){

    # > need push
    # $ if there is something stashed
    # + if there are staged files need commit
    # % if there are only untracked files
    # * if repository is dirty
    # = colour branch name depending on state
    # # first commit
    __git_branch_color="\\[\\033[0m\\]"
    local __git_branch #disable=2155
          __git_branch=$(__git_ps1 [%s])

    if   [[ "${__git_branch}" =~ \>  ]];then __git_branch_color="\\[\\033[1;5;91;49m\\]"
    elif [[ "${__git_branch}" =~ \$  ]];then __git_branch_color="\\[\\033[1;33;49m\\]"
    elif [[ "${__git_branch}" =~ [*] ]];then __git_branch_color="\\[\\033[3;5;32;49m\\]"
    elif [[ "${__git_branch}" =~ \+  ]];then __git_branch_color="\\[\\033[1;31;49m\\]"
    elif [[ "${__git_branch}" =~ %   ]];then __git_branch_color="\\[\\033[34;49m\\]"
    elif [[ "${__git_branch}" =~ =   ]];then __git_branch_color="\\[\\033[3;92;49m\\]" ;fi

    local color_block1="\\[\\033[3$1;10$2m\\][\\t]\\[\\033[9$2;10$4m\\]▶"
    local color_block2="\\[\\033[3$3;10$4m\\]\\u@\\h\\[\\033[9$4;10$6m\\]▶"
    local color_block3="\\[\\033[3$5;10$6m\\]\\w\\[\\033[9$6;49m\\]▶"
    local color_block4="${__git_branch_color}\$(__git_ps1 [%s])"
    local color_block5="\\[\\033[0;91m\\]\\$\\[\\033[0m\\] "

    export PS1="${color_block1}${color_block2}${color_block3}${color_block4}${color_block5}"
}

prompt_color(){
    [[ $# -eq 3 ]]&& prompt_configurator "$1" "9"  "$2" "9"  "$3" "9"
    [[ $# -eq 4 ]]&& prompt_configurator "$1" "$4" "$2" "$4" "$3" "$4"
    [[ $# -eq 6 ]]&& prompt_configurator "$1" "$2" "$3" "$4" "$5" "$6"
}

# if .git-prompt.sh exists, set options and execute it
    export GIT_PS1_SHOWDIRTYSTATE=true
    export GIT_PS1_SHOWSTASHSTATE=true
    export GIT_PS1_SHOWUNTRACKEDFILES=true
    export GIT_PS1_SHOWUPSTREAM="auto"
    export GIT_PS1_HIDE_IF_PWD_IGNORED=true
    export GIT_PS1_SHOWCOLORHINTS=false

#disable=2034
export PS1bkp="$PS1"
